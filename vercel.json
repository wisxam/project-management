{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "server/index.js",  // Change this to the entry point of your server
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/server/$1" }, // Adjust this if your API routes are located differently
    { "src": "/(.*)", "dest": "/client/$1" }
  ]
}
